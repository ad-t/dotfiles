conky.text = ''
.. bgcolor2
.. fgcolor8
.. "%{l}"
.. " ${exec bspc wm -g | $HOME/.config/dotfiles/lemonbar/workspaces.py}"
.. "%{c}"
.. bgcolor6
.. fgcolor7
.. " ${time %H:%M:%S %a %-d %b} "
.. "%{r}"
.. bgcolor3
.. fgcolor0
.. " ${fs_used /} / ${fs_size /} (${fs_used_perc}%) "
.. bgcolor4
.. fgcolor0
.. " CPU: ${cpu}% @ ${freq_g}GHz "
.. bgcolor6
.. fgcolor0
.. " NET: ${downspeedf wlp6s0} KiB "
.. bgcolor7
.. fgcolor0
.. " ${uid_name 1000} "
.. bgcolor8